{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Extension - Watch all",
            "group": "build",
            "dependsOn": [
                "Extension - Watch",
                "Extension WebView - Watch"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "npm",
            "label": "Extension - Watch",
            "script": "watch",
            "group": "build",
            "problemMatcher": {
                "base": "$ts-webpack-watch",
                "source": "webpack-ts-loader",
                "owner": "webpack-ts-loader",
                "applyTo": "allDocuments"
            },
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "Extension WebView - Watch",
            "command": "yarn start",
            "options": {
                "cwd": "./webview"
            },
            "group": "build",
            "problemMatcher": [
                {
                    "source": "parser",
                    "owner": "react",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "pattern": [
                        {
                            "regexp": "^SyntaxError: (.*): (.+) \\((\\d+):(\\d+)\\)$",
                            "file": 1,
                            "message": 2,
                            "line": 3,
                            "column": 4
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Compiling.*",
                        "endsPattern": "^(Compiled successfully|Failed to compile)"
                    }
                },
                {
                    "source": "typescript",
                    "owner": "react",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "pattern": [
                        {
                            "regexp": "^TypeScript error in (.*)\\((\\d+),(\\d+)\\):",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "^(.{5,})$",
                            "message": 1,
                            "loop": true
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Compiling.*",
                        "endsPattern": "^(Compiled successfully|Failed to compile)"
                    }
                }
            ],
            "isBackground": true
        }
    ]
}